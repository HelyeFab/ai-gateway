{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":80"],
          "routes": [
            {
              "match": [
                {
                  "host": ["selfmind.dev", "www.selfmind.dev"]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "status_code": 301,
                  "headers": {
                    "Location": ["https://{http.request.host}{http.request.uri}"]
                  }
                }
              ]
            },
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "api-gatekeeper:8080"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "srv1": {
          "listen": [":443"],
          "routes": [
            {
              "match": [
                {
                  "host": ["selfmind.dev", "www.selfmind.dev"],
                  "path": ["/health"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "api-gatekeeper:8080"
                    }
                  ]
                }
              ]
            },
            {
              "match": [
                {
                  "host": ["selfmind.dev", "www.selfmind.dev"],
                  "path": ["/chat/api/*", "/tts/api/*", "/image/api/*", "/whisper/api/*", "/status"]
                },
                {
                  "method": ["POST", "GET"]
                }
              ],
              "handle": [
                {
                  "handler": "headers",
                  "request": {
                    "add": {
                      "X-Forwarded-Proto": ["https"]
                    }
                  }
                },
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "api-gatekeeper:8080"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "tls": {
      "certificates": {
        "load_files": [
          {
            "certificate": "/certs/origin.crt",
            "key": "/certs/origin.key"
          }
        ]
      }
    }
  }
}